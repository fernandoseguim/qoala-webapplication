@using Website.Models.ViewModels
@model BlogViewModel
@{
    ViewBag.Title = "Blog";
}

@{
    if (Model.Posts == null)
    {
        <h3> Nada encontrado </h3>
    }
    else
    {
        foreach (var item in Model.Posts)
        {
            <h1>@item.Title</h1>
            <div>@item.Content</div>
            <hr />
        }
    }
}