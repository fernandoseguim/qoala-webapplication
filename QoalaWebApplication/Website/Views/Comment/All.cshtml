@model List<Website.Models.ViewModels.CommentViewModel>
<div id="list-comments">
    <ul>
        @if (Model.Count == 0)
        {
            <li><h4>Não há comentários ainda nesta notícia.</h4></li>
        }
        else
        {
            <h4>Comentários</h4>
            foreach (var comment in Model)
                {
                <li class="comment">
                    <span>@comment.UserName</span>
                    <h5>@comment.Content</h5>
                    <hr />
                </li>
            }

        }
    </ul>
</div>