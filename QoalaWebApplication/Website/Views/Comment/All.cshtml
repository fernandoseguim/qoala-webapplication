@model List<Website.Models.ViewModels.CommentViewModel>
@if (Model.Count == 0)
{
    <h4>Não há comentários ainda nesta notícia.</h4>
}
else
{
    <h4>Comentários</h4>
    <div id="list-comments">
        <ul>
            @foreach (var comment in Model)
            {
                <li>
                    <span>Usuário - @comment.IdUser</span>
                    <h5>@comment.Content</h5>
                    <hr />
                </li>
            }
        </ul>
    </div>
}