@model Website.Models.ViewModels.PaginationViewModel
@if (Model.TotalNumberPages > 1)
{
    <ul>
        @if (Model.PreviousPage)
        {
            <li>@Html.ActionLink("Página Anterior", "Index", Model.ControllerName, new { page = Model.CurrentPage - 1 }, new { @class = "" })</li>
        }
        @for (var count = 1; count <= Model.TotalNumberPages; count++)
        {
            <li>
                @if (count == Model.CurrentPage)
                {
                    <strong>Página @count</strong>
                }
                else
                {
                    @Html.ActionLink("Página " + count, "Index", Model.ControllerName, new { page = count }, new { @class = "" });
                }
            </li>
        }
        @if (Model.NextPage)
        {
            <li>@Html.ActionLink("Próxima Página", "Index", Model.ControllerName, new { page = Model.CurrentPage + 1 }, new { @class = "" })</li>
        }
    </ul>
}