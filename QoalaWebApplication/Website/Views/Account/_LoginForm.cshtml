@model Website.Models.ViewModels.LoginViewModel
@{
    Layout = null;
}

<div id="feedbackLogin"></div>
@using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal", id="formLogin", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
        <div class="input-group col-md-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", aria_describedby = "sizing-addon1" })
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
        <div class="input-group col-md-10">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control", aria_describedby = "sizing-addon1" })
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
        </div>
        <p>
            @Html.ActionLink("Esqueci minha senha", "ForgotPassword")
        </p>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Acessar conta" />
        </div>
    </div>
}