@model Website.Models.ViewModels.Sponsor.SponsorPlanViewModel
<section>
    <div class="container">
        <div class="row">
            <h5>Olá @Session.CurrentUser().Name preencha os dados abaixo para investir</h5>
            @using (Html.BeginForm("AddPlan", "Plan"))
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.IdPlan)

                    <div class="form-group">
                        <label class="control-label col-md-2" for="Qnt">Nome do plano</label>
                        <div class="col-md-10">
                            @Model.PlanName
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Qnt, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Qnt, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Qnt, "", new { @class = "text-danger" })
                        </div>
                        <strong>Quantidade disponível @Model.QntLeft</strong>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.UserDocument, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.UserDocument, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.UserDocument, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Investir" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>